<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee 
              http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
         version="2.5"
         xmlns="http://java.sun.com/xml/ns/javaee">

  <!-- Servlets -->
  <servlet>
    <servlet-name>LoginServlet</servlet-name>
    <servlet-class>edu.ycp.cs320.teamProject.servlet.LoginServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>HomePageServlet</servlet-name>
    <servlet-class>edu.ycp.cs320.teamProject.servlet.HomePageServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>InfoInputServlet</servlet-name>
    <servlet-class>edu.ycp.cs320.teamProject.servlet.InfoInputServlet</servlet-class>
  </servlet>
  <servlet>
  	<servlet-name>JobComparisonServlet</servlet-name>
  	<servlet-class>edu.ycp.cs320.teamProject.servlet.JobComparisonServlet</servlet-class>
  </servlet>
  <servlet>
  	<servlet-name>ProfileServlet</servlet-name>
  	<servlet-class>edu.ycp.cs320.teamProject.servlet.ProfileServlet</servlet-class>
  </servlet>

  <!-- Servlet mappings -->
  <servlet-mapping>
    <servlet-name>LoginServlet</servlet-name>
    <url-pattern>/login</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>HomePageServlet</servlet-name>
    <url-pattern>/home</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>InfoInputServlet</servlet-name>
    <url-pattern>/infoInput</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
  	<servlet-name>JobComparisonServlet</servlet-name>
  	<url-pattern>/compare</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
  	<servlet-name>ProfileServlet</servlet-name>
  	<url-pattern>/profile</url-pattern>
  </servlet-mapping>
</web-app>
